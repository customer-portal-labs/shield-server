{
  "name": "@cplabs/shield-server",
  "version": "3.0.0",
  "description": "",
  "bin": "./dist/bin/shield-server.js",
  "main": "./dist/index.js",
  "types": "./@types/index.d.ts",
  "files": [
    "dist",
    "@types"
  ],
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && npm run lint",
    "dev": "ts-node ./src/bin/shield-server.ts",
    "build": "tsc --build tsconfig.production.json",
    "pretest": "npm run lint",
    "test": "nyc mocha",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf ./dist ./@types ./coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/customer-portal-labs/shield-server.git"
  },
  "author": "Kun Yan <kyan@redhat.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/customer-portal-labs/shield-server/issues"
  },
  "homepage": "https://github.com/customer-portal-labs/shield-server#readme",
  "devDependencies": {
    "@types/chai": "4.3.8",
    "@types/compression": "1.7.3",
    "@types/connect-history-api-fallback": "1.5.1",
    "@types/cookie-parser": "1.4.4",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.19",
    "@types/figlet": "1.5.6",
    "@types/lodash": "4.14.199",
    "@types/mocha": "10.0.2",
    "@types/mock-fs": "4.13.2",
    "@types/morgan": "1.9.6",
    "@types/supertest": "2.0.14",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chai": "4.3.10",
    "eslint": "8.51.0",
    "eslint-config-prettier": "8.10.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "mocha": "10.2.0",
    "mock-fs": "5.2.0",
    "nyc": "15.1.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.5",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "chalk": "^5.2.0",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cosmiconfig": "^8.1.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "figlet": "^1.6.0",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^2.0.6",
    "internal-ip": "^8.0.0",
    "lodash": "^4.17.21",
    "log2splunk": "^0.0.5",
    "morgan": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": "lcov"
  }
}
