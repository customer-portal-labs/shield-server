{
  "name": "@cplabs/shield-server",
  "version": "0.2.3",
  "description": "",
  "bin": "./dist/bin/shield-server.js",
  "main": "./dist/index.js",
  "types": "./@types/index.d.ts",
  "files": [
    "dist",
    "@types"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && npm run lint",
    "dev": "ts-node ./src/bin/shield-server.ts",
    "build": "tsc --build tsconfig.production.json",
    "pretest": "npm run lint",
    "test": "nyc mocha",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf ./dist ./@types ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/customer-portal-labs/shield-server.git"
  },
  "author": "Kun Yan <kyan@redhat.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/customer-portal-labs/shield-server/issues"
  },
  "homepage": "https://github.com/customer-portal-labs/shield-server#readme",
  "devDependencies": {
    "@types/chai": "4.2.20",
    "@types/compression": "1.7.1",
    "@types/connect-history-api-fallback": "1.3.5",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.11",
    "@types/express": "4.17.13",
    "@types/express-rate-limit": "5.1.2",
    "@types/figlet": "1.5.1",
    "@types/lodash": "4.14.170",
    "@types/mocha": "8.2.2",
    "@types/mock-fs": "4.13.0",
    "@types/morgan": "1.9.2",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "chai": "4.3.4",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "mocha": "9.0.2",
    "mock-fs": "5.0.0",
    "nyc": "15.1.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "ts-node": "10.0.0",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "arg": "^5.0.0",
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cosmiconfig": "^7.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "figlet": "^1.5.0",
    "helmet": "^4.6.0",
    "http-proxy-middleware": "^2.0.0",
    "internal-ip": "^6.2.0",
    "lodash": "^4.17.21",
    "log2splunk": "^0.0.5",
    "morgan": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": "lcov"
  }
}
