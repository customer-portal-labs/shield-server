{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./@types",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "@types"]
}
